.u-avatar
	display inline-flex
	background-color $gray
	border 1px solid $gray
	border-radius 2px
	margin 3px 6px
	position relative

//props:size
.u-avatar-size__small
	font-size 14px
	width 24px
	height 24px

.u-avatar-size__medium
	font-size 15px
	width 32px
	height 32px

.u-avatar-size__large
	font-size 16px
	width 40px
	height 40px

.u-avatar-text
	position absolute
	top 50%
	left 50%
	white-space nowrap