.u-button
	margin 0 10px
	border-width 1px
	border-style solid
	display inline-flex
	border-radius 3px
	cursor pointer
	transition all .3s
	user-select none

.u-button-dashed
	border-style dashed

//浅色主题、深色主题、文字
for val in 'default' 'success' 'danger' 'warning' 'info'
	.u-button-{val}
		border-color $ + val + -border
		background-color $ + val + -bg
		color $ + val + -color
		&:hover
			color $ + val + -bg-easy
	.u-button-text.u-button-{val}
		background-color transparent
		border none
	.u-button-wave-{val}:not(.u-button-text)
		animation buttonWave + val .3s 1

for val in  'success' 'danger' 'warning' 'info'
	.u-button-deep.u-button-{val}:not(.u-button-text)
		background-color $ + val + -color
		color #fff
		&:hover
			background-color $ + val + -bg-easy
		&:active
			background-color $ + val + -bg-deep
	@keyframes buttonWave{val}  //for default
		0%
			box-shadow 0 0 0.5px 0 $ + val + -bg-easy
		100%
			box-shadow 0 0 0.5px 4.5px $ + val + -bg

.u-button-wave-default
	animation buttonWaveDefault .3s 1 !important

@keyframes buttonWaveDefault
	0%
		box-shadow 0 0 0.5px 0 $main-color
	100%
		box-shadow 0 0 0.5px 4.5px $main-color-easy

.u-button-default.u-button-deep
	background-color $main-color
	color #fff
	&:active
		background-color $main-color-deep 

.u-button-default:not(.u-button-deep)
	&:hover
		color $main-color
		border-color $main-color

.u-button-size-small
	padding 4px 8px
	font-size 14px

.u-button-size-medium
	padding 6px 10px
	font-size 16px

.u-button-size-large
	padding 8px 12px
	font-size 18px

.u-button-size-huge
	padding 10px 14px
	font-size 20px
	