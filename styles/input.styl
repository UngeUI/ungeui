.u-input
	border 1px solid #ddd
	display inline-flex
	width 100%
	margin 10px 0
	border-radius 4px
	overflow hidden
	transition all .2s
	&-size
		&-small
			height 28px
			padding-left 10px
			font-size 14px
		&-medium
			height 34px
			padding-left 12px
			font-size 14px
		&-large
			height 40px
			padding-left 14px
			font-size 15px
	&-wrapper
		width 100%
	&-input
		height  100%
	&__input-el
		width 100%
		height 100%
		border none
		outline none
	&-focus
		box-shadow 0 0 1px 3px $main-color-easy
		border-color $main-color